<div class="bg-white section-shadow py-4">
  <div class="container">
    <h1 class="text-green font-title letter-spacing font-weight-light">- Les Patrons de couture -</h1>
    <div class="w-75 mx-auto">
      <div class="position-relative my-4">
        <%= link_to measures_path do %>
          <h2 class="button-patterns font-size-16px mb-0 font-weight-regular position-bottom-center d-none d-md-block">Je prends mes mesures</h2>
          <%= image_tag 'mes-mesures.png', class: 'w-100', alt: "Ludoria mètre ruban prise de mesure" %>
        <% end %>
      </div>

      <div class="position-relative coming-frame-container my-4">
        <%= link_to '#' do %>
          <h2 class= "button-patterns font-size-16px mb-0 font-weight-regular position-bottom-center d-none d-md-block">Corsage et Jupe de base</h2>
          <%= image_tag 'corsage-de-base.png', class: 'w-100', alt: "Ludoria corsage et jupe de  de base" %>
          <div class="frame-opacity-on-hover">
            <div class="d-flex align-items-center h-100 justify-content-center">
              <p class="text-dark-grey font-size-responsive-80px-40px font-weight-thin">à venir</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="position-relative coming-frame-container">
        <%= link_to '#' do%>
          <h3 class="button-patterns font-size-16px mb-0 font-weight-regular position-bottom-center d-none d-md-block">La collection</h3>
          <%= image_tag 'ludoria-col.png', class: 'w-100', alt: "Ludoria la collections de patrons de couture sur mesure" %>
          <div class="frame-opacity-on-hover">
            <div class="d-flex align-items-center h-100 justify-content-center">
              <p class="text-dark-grey font-size-responsive-80px-40px font-weight-thin">à venir</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
