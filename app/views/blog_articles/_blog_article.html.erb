<div class="card text-center position-relative">
  <%= link_to "", blog_path(blog_article), class: "link_invisible" %>
  <% unless blog_article.cover_picture.file.nil? %>
    <%= default_photo(blog_article.cover_picture, 'card-img-top', blog_article.title) %>
  <% end %>
  <div class="card-body">
    <h3 class="card-title font-size-24px text-green"><%= blog_article.title %></h3>
    <p class="card-text font-size-14px text-grey"><%= blog_article.content.truncate(200, separator: ' ').html_safe  %></p>
  </div>
</div>
