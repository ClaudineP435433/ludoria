<div class="page-min-height">
  <div class="container py-5">
    <h1 class="text-green font-size-40px letter-spacing font-weight-light text-center"><%= @article.title %></h1>
    <div class="row my-5">
      <div class="col-md-6 col-lg-5 col-xl-4 mb-3">
        <% if @article.blog_photos.size == 0 %>
          <%= cl_image_tag @article.cover_picture, class: "card-img" %>
        <% elsif @article.blog_photos.size == 1%>
          <%= cl_image_tag @article.blog_photos.first.photo, class: "card-img" %>
        <% else %>
          <div class="card-columns-small">
            <% @article.blog_photos.each do |article_photo| %>
              <div class="card-body-small">
                <%= cl_image_tag article_photo.photo, class: "card-img" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-md-6 col-lg-7 col-xl-8 py-2">
        <p class= "text-justify"><%= @article.content %></p>
      </div>
    </div>
  </div>
</div>
