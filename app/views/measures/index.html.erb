            <%= image_tag 'ludoria-col.png', style: 'width:560px;height:315px' %>
          </div>
        </div>
        <% if user_signed_in? %>
          <div class="m-3">
            <%= link_to  download_pdf_url, class: "text-decoration-none" do %>
              <p class="button-large-green text-center p-3 w-100" >Mon guide<br>de<br>prise de mesures<br>(PDF)</p>
            <% end %>
