<%= simple_form_for contact, remote: true do |f| %>
  <div class="row mb-3">
    <div class="col-12 col-sm-5 col-md-3 text-left">
      <p class="ml-2 letter-spacing-3px py-2">CONTACT</p>
      <%= f.input :email, as: :string, label: false, error: false, input_html: { class: "mr-3 font-weight-thin placeholder-grey"}, placeholder: 'Email' %>
    </div>
    <div class="col-12 col-sm-7 col-md-5">
      <%= f.input :content, label: false, error: false, input_html: { class: "font-weight-thin contact-input placeholder-grey"}, placeholder: 'Entrez votre message'  %>
    </div>
    <div class="col-6 col-md-2 d-flex align-items-center">
      <%= f.submit "Envoyer", class: "button-white border-0" %>
    </div>
    <div class="col-6 col-md-2 footer-icons">
      <div class="d-flex justify-content-end align-items-center h-100">
        <%= link_to "/", class: "text-white" do %>
          <i class="fab fa-facebook-f font-size-24px mr-3"></i>
        <% end %>
        <%= link_to "/", class: "text-white" do %>
          <i class="fab fa-instagram  font-size-24px mr-3"></i>
        <% end %>
        <%= link_to "/", class: "text-white" do %>
          <i class="fab fa-youtube-square  font-size-24px"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
