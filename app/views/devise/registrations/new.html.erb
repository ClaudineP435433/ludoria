<div class="page-min-height d-flex justify-content-center align-items-center w-100 px-3">
  <div class="width-500px mx-auto">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<!--       <%= f.error_notification %> -->


        <%= f.input :email,
                    label: false,
                    autofocus: true,
                    placeholder: 'Email',
                    input_html: { autocomplete: "email", class: "form-control font-size-14px-important border-radius-20px-important text-dark-grey py-1 px-3 my-3" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: "Mot de passe" + (" (#{@minimum_password_length} caractères minimum)" if @minimum_password_length) ,
                    input_html: { autocomplete: "new-password", class: "form-control font-size-14px-important border-radius-20px-important text-dark-grey py-1 px-3 my-3" } %>
        <%= f.input :password_confirmation,
                    label: false,
                    placeholder: 'Confirmation mot de passe',
                    input_html: { autocomplete: "new-password", class: "form-control font-size-14px-important border-radius-20px-important text-dark-grey py-1 px-3 my-3" } %>
        <%= f.input :last_name,
                    label: false,
                    placeholder: 'Nom',
                    input_html: { autocomplete: "new-password", class: "form-control font-size-14px-important border-radius-20px-important text-dark-grey py-1 px-3 my-3" } %>
        <%= f.input :first_name,
                    label: false,
                    placeholder: 'Prénom',
                    input_html: { autocomplete: "new-password", class: "form-control font-size-14px-important border-radius-20px-important text-dark-grey py-1 px-3 my-3" } %>

      <div class="row">
        <div class="col-12 col-sm-8">
          <div class="pl-3 font-size-12px">
            <%= f.input :conditions_validation, as: :boolean, label: " Je confirme avoir pris connaissance #{link_to 'des conditions générales de vente et d’utilisation', '/', class: 'text-green'}".html_safe, error: false %>
          </div>
        </div>
         <div class="col-12 col-sm-4 text-center">
          <%= f.submit "ok", class: 'px-4 py-2 text-white bg-green border-radius-20px border-0' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
