<div class="page-min-height d-flex justify-content-center align-items-center">
  <div class="frame-log-in d-flex align-items-center justify-content-center" style="background: url( <%= image_url "log-in-bg.jpg" %>);">
    <div class="frame-300px bg-white text-center pb-5 pt-4 px-4 position-relative">
      <p class="text-green font-size-24px">Mot de passe</p>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <%= f.input :password,
                label: false,
                placeholder: 'mot de passe',
                autofocus: true,
                input_html: { autocomplete: "new-password", class: "form-control border-radius-20px-important font-size-14px-important text-dark-grey py-1 px-3 mt-3" } %>
          <%= f.input :password_confirmation,
                label: false,
                placeholder: 'confirmation du mot de passe',
                input_html: { class: "form-control border-radius-20px-important font-size-14px-important text-dark-grey py-1 px-3 my-3" } %>
          <div class="form-actions">
            <%= f.submit "Valider", class: 'px-4 py-2 w-75 text-white bg-green border-radius-20px border-0' %>
          </div>
        <% end %>
        <div class="position-bottom-right text-right">
          <p class="mb-0"><%= link_to "se connecter ?", new_session_path(resource_name), class: "text-dark-grey font-size-14px font-weight-light" %></p>
          <p  class="mb-0"><%= link_to "nouvelle cliente ?", new_registration_path(resource_name), class: "text-dark-grey font-size-14px font-weight-light" %></p>
        </div>
    </div>
  </div>
</div>

